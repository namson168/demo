<% provide(:title, @user.name) %>

  <div class="row">
    <%if current_user? @user %>
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>

      <section class="entry_form">
        <%= render 'shared/entry_form' %>
      </section>
    </aside>
    <% else%>
    <aside class="col-md-4">
        <section>
          <h1>
            <%= gravatar_for @user %>
            <%= @user.name %>
          </h1>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
      </aside>
    <%end%> 

    <div class="col-md-8">
      <%= render 'follow_form' if logged_in? %>
      <h3>Entry Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>

      

 



