<li id="entry-<%= entry.id %>">
  
  <%= link_to gravatar_for(entry.user, size: 90), entry.user %>
  <span class="timestamp">
 <%= entry.created_at %> 
  </span>
  <span class="title"><%=link_to entry.title, entry %></span>
  <span class="user">Posted by <%= link_to entry.user.name, entry.user %></span> 
  <div class="body">
    <%= entry.body %>
    <%= image_tag entry.picture.url if entry.picture? %>
  </div>


</li>